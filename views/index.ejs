<!-- Header van de indexpagina -->
<%- include('./partials/header') %>

<!-- Inhoud met diverse podcasts -->
<main class="index">
	<% data.forEach(collection => { %>
	<article>
		<picture>
            <source srcset="<%=  %>" type="">
			<img
                src="<%  %>"
				alt="<%= collection.attributes.title %>"
                width="300"
                height="300"
			/>
		</picture>
		<h2><%= collection.attributes.title %></h2>
		<p><%= collection.relationships.authors.data.id %></p>
		<a href="/collections?id=<%= collection.id %>">
            Ga naar deze aflevering 
            <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-volume" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
